</head>

{% block header %}
    <!--Header-->
    <header>
        <!--Barre de navigation - Header-->
        <!--Possibilité de fixe la barre de navigation avec : fixed-top-->
        <nav class="navbar navbar-expand-lg bg-body-tertiary bg-light">
            <div class="container-fluid ">
                <a class="navbar-brand" href="{{asset('/')}}">
                    <img src="{{asset('image/generale/logo.png')}}" alt="Bootstrap" width="30" height="auto">
                    La Voie
                </a>

                <button class="navbar-toggler" type="button" data-bs-toggle="collapse"
                    data-bs-target="#navbarSupportedContent" aria-controls="navbarSupportedContent"
                    aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>

                <div class="collapse navbar-collapse" id="navbarSupportedContent">
                    <ul class="navbar-nav me-auto mb-2 mb-lg-0">
                        <li class="nav-item">
                            <a class="nav-link" aria-current="page" href="{{asset('/')}}">Accueil</a>
                        </li>

                        <li class="nav-item">
                            <a class="nav-link" href="{{asset('carte')}}">Carte</a>                            
                        </li>

                        <li class="nav-item dropdown">
                            <a class="nav-link dropdown-toggle" href="#" role="button" data-bs-toggle="dropdown"
                                aria-expanded="false">
                                Boite à outils
                            </a>
                            <ul class="dropdown-menu">
                                <li><a class="dropdown-item"
                                        href="{{asset('boiteaoutils/lexique')}}">Lexique</a></li>
                                <li><a class="dropdown-item"
                                        href="{{asset('boiteaoutils/passeport')}}">Les
                                        passeports</a></li>
                                <li><a class="dropdown-item" href="{{asset('boiteaoutils/epi')}}">Les
                                        E.P.I.</a></li>
                                <li><a class="dropdown-item" href="{{asset('boiteaoutils/noeud')}}">Les
                                        noeuds</a></li>
                                <li><a class="dropdown-item"
                                        href="{{asset('boiteaoutils/cotation')}}">Les cotations</a>
                                </li>
                                <li><a class="dropdown-item"
                                        href="{{asset('boiteaoutils/conseil')}}">Conseils
                                        techniques</a></li>
                            </ul>
                        </li>
                    </ul>
                </div>
            </div>
        </nav>

        <!-- Background image -->
        <div class="banner">
            <div class="banner-image">
                <div class="banner-overlay">
                    <h1 class="banner-title">{% block titlePage %}La Voie{% endblock %}</h1>
                </div>
            </div>
        </div>
        <!--Fin Background image -->
    </header>
    <!--Fin header-->
{% endblock %}

<body>
    {% block body %}{% endblock %}
</body>

{% block javabody %}{% endblock %}


                        </ul>
                    </div>
                </div>
            </section>
        </div>
        <!-- Copyright -->
        <div class="copyright">
            <div class="row">
                <div class="col-lg-12 col-md-12 my-1 mb-md-0">
                    <a class="police-fond-dark" href="{{asset('/')}}">lavoie-escalade.fr</a>
                    |
                    <a href="{{asset('mentionlegale')}}" class="police-fond-dark">Mentions légales</a>
                    <p class="text-center">© 2023 La Voie. Tous droits réservés.</p>
                </div>
            </div>
        </div>
    </footer>
    <!-- Footer Fin -->
{% endblock %}


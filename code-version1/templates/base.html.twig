                    <div class="col-lg-3 col-md-6 mb-4 mb-md-0">
                        <h5 class="titre-footer">Autre</h5>

                        <ul class="list-unstyled mb-0">
                            <li>
                                <a href="{{asset('contact')}}" class="police-fond-dark">Contacts</a>
                            </li>
                            <li>
                                <a href="{{ path('coindev') }}" class="police-fond-dark">Coin développeurs</a>

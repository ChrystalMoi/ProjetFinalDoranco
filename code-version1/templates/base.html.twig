                            </div>

                            <div class="row">
                                <div class="col-md-4 col-lg-4">
                                    <a href="{{asset('boiteaoutils/passeport')}}"
                                        class="police-fond-dark">Passeports</a>
                                </div>
                                <div class="col-md-4 col-lg-4">
                                    <a href="{{asset('boiteaoutils/noeud')}}" class="police-fond-dark">Noeuds</a>
                                </div>
                                <div class="col-md-4 col-lg-4">
                                    <a href="{{asset('boiteaoutils/conseil')}}" class="police-fond-dark">Conseils</a>
                                </div>
                            </div>
                        </div>
                    </div>

